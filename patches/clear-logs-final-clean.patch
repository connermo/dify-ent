+                storage.delete(upload_file.key)
+                success_count += 1
+                
+        except Exception as e:
+            logger.error(f"Failed to delete upload file {upload_file_id}: {str(e)}")
+            failed_count += 1
+    
+    return {
+        "total": len(upload_file_ids),
+        "success": success_count,
+        "failed": failed_count
+    }
